<mvc:View controllerName="logaligroup.SAPUI5.controller.App"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">
    <!-- Shell :  Permite modificar el acpecto de la aplicacion,  cuando la aplicacion cuando la aplicacion se va a ejecutar en los dispositivos-->
    <Shell>
        <App>
            <pages>
                <Page title="{i18n>appTitle}">
                    <headerContent>
                        <Button id="helloDialogHeader" 
                                icon="sap-icon://action" 
                                press=".onOpenDialogHeader" 
                                class="sapUiSmallMarginEnd"/>
                    </headerContent>
                    <content>
                        <mvc:XMLView viewName="logaligroup.SAPUI5.view.HelloPanel"/>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>

